<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieHood" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ungu02</item>
        <item name="colorPrimaryVariant">@color/ungu01</item>
        <item name="colorOnPrimary">@color/putih</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hijau</item>
        <item name="colorSecondaryVariant">@color/biru</item>
        <item name="colorOnSecondary">@color/hitam</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="SearchView" parent="">
        <item name="android:textColorSecondary">@color/ungu02</item>
        <item name="android:editTextColor">@color/ungu02</item>
        <item name="android:textColorHint">@color/ungu02</item>
    </style>
</resources>