<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".utils.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieHood"
        tools:targetApi="31">
        <activity
            android:name=".CariFilmActivity"
            android:exported="false" />
        <activity
            android:name=".DetailFilmActivity"
            android:exported="false" />
        <activity
            android:name=".ProfilActivity"
            android:exported="false" />
        <activity
            android:name=".MylistActivity"
            android:exported="false" />
        <activity
            android:name="com.example.moviehood.ui.signup.SignupActivity"
            android:exported="false" />
        <activity
            android:name="com.example.moviehood.ui.signin.SigninActivity"
            android:exported="false" />
        <activity
            android:name="com.example.moviehood.ui.activities.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>